<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?background_color">

    <TextView
        android:id="@+id/factory_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="?textColor"
        android:textSize="30dp" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/factory_cancel_bt"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_factory_btnbg"
            android:layout_marginStart="150dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusRight="@id/factory_ok_bt"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:duplicateParentState="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/dialog_changeLanguage_btCancel"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="?factory_textColor"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/factory_ok_bt"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="150dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/factory_cancel_bt"
            android:background="@drawable/selector_factory_btnbg"
            android:orientation="horizontal">
            <TextView
                android:duplicateParentState="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/dialog_changeLanguage_btConfirm"
                android:textSize="30sp"
                android:gravity="center"
                android:textColor="?factory_textColor"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>