<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemData"
            type="com.twd.setting.module.bluetooth.model.CachedBluetoothDevice" />
    </data>

    <LinearLayout
        android:id="@+id/itemRL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="horizontal"
        android:tag="layout/layout_item_bluetooth_research_0">

        <TextView
            android:id="@+id/btnTv"
            style="@style/ItemPaddingStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?bluetoothSearchBtnItemBg"
            android:duplicateParentState="true"
            android:text="@string/str_research"
            android:textColor="?mainPageItemColor"
            android:textSize="@dimen/bluetooth_item_textsize"
            android:visibility="visible" />

        <TextView
            android:id="@+id/btnSearchingTv"
            style="@style/ItemPaddingStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?bluetoothSearchingBtnItemBg"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:text="@string/str_searching"
            android:textColor="?mainPageItemColor"
            android:textSize="@dimen/bluetooth_item_textsize"
            android:visibility="gone" />
    </LinearLayout>
</layout>