<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="12.0px" />
            <solid android:color="#ffffffff" />
            <stroke android:width="3.0px" android:color="#ff000000" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="12.0px" />
                    <stroke android:width="3.0px" android:color="#fff33e25" />
                </shape>
            </item>
            <item android:left="6.0px" android:top="6.0px" android:right="6.0px" android:bottom="6.0px">
                <shape android:shape="rectangle">
                    <corners android:radius="12.0px" />
                    <solid android:color="#fff33e25" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="12.0px" />
                    <stroke android:width="3.0px" android:color="#fff33e25" />
                </shape>
            </item>
            <item android:left="6.0px" android:top="6.0px" android:right="6.0px" android:bottom="6.0px">
                <shape android:shape="rectangle">
                    <corners android:radius="12.0px" />
                    <solid android:color="#80f33e25" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>