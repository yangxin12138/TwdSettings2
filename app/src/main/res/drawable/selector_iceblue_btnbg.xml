<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1.0dip" android:color="@color/customBlue" />
                    <corners android:radius="4.0dip" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/customBlue" />
                    <padding android:left="4.5dip" android:top="4.5dip" android:right="4.5dip" android:bottom="4.5dip" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="4.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false" android:state_enabled="true">
        <shape>
            <solid android:color="@color/customBlue" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#a3ffffff" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
</selector>